<!Doctype html>
<html>
<head>
  <meta charset="utf-8">
  <title>本棚</title>
</head>
<body>
  <h2>本一覧</h2>
  <table>
    <tr><th>ID</th><th>著者</th><th>タイトル</th></tr>
      <% let number = 0 %>
      <% for( let row of data ) { %>
        <tr><td><%= row.id %></td> 
        <td>著 : <%= row.auther %></td>
        <td><a href="/book/<%= number %>"><%= row.title %></a></td></tr>
        <% number += 1 %>
      <% } %>
  </table>
  <a href="/book/create">追加</a>
</body>
</html>